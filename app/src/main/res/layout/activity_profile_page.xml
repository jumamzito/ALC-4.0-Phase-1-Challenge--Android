<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tot_bgn"
    android:orientation="vertical"
    tools:context=".profilePage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/prof" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/zaibu_juma"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/line_bg"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="Track: "
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/track_v"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1.2"
        android:text="TextView"
        android:gravity="start"
        android:textSize="18sp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="Country: "
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/country"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.2"
            android:text="TextView"
            android:gravity="start"
            android:textSize="18sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="Email:  "
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/email_v"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.2"
            android:text="TextView"
            android:gravity="start"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="Phone number:  "
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/phoneno_v"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.2"
            android:text="TextView"
            android:gravity="start"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="Slack Username:"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/username_slack_v"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.2"
            android:text="TextView"
            android:gravity="start"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>